    <modelVersion>4.0.0</modelVersion>

    <groupId>com.leo.pack</groupId>
    <artifactId>ProgramJDBC</artifactId>
    <version>1.0</version>
    <packaging>war</packaging>
    <name>Happy Java Application</name>
    <url>http://www.example.com</url>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <mysqlConnectorVersion>5.1.35</mysqlConnectorVersion>
        <lombokVersion>1.16.18</lombokVersion>
        <org.hibernate.hibernate-core.version>4.3.10.Final</org.hibernate.hibernate-core.version>
        <servletVersion>2.5</servletVersion>
        <tomcat.plugin.version>2.2</tomcat.plugin.version>
        <liquiBaseVersion>3.4.2</liquiBaseVersion>
        <spring.version>4.3.17.RELEASE</spring.version>
        <spring-security-version>4.2.9.RELEASE</spring-security-version>
